@model IEnumerable<Teacher>
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teacher List</h4>
                <div class="col-12">
                    <a asp-action="Create" asp-controller="Teacher" asp-area="Admin" class="btn btn-success">Add a new teacher</a>
                    <a asp-action="Hobby" asp-controller="Teacher" asp-area="Admin" class="btn btn-success">Hobbies</a>
                    <a asp-action="Departments" asp-controller="Teacher" asp-area="Admin" class="btn btn-success">Departments</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Event Image
                                </th>
                                <th>
                                    Event Name
                                </th>
                                <th>
                                    Details
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Teacher teacher in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/img/teacher/@teacher.Image" alt="Course" style="width:100px !important; height:100px !important; border-radius:0; border:2px solid black" />
                                    </td>
                                    <td class="py-1">
                                        <p>@teacher.Name.ToUpper()</p>
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@teacher.Id" asp-controller="Teacher" asp-area="Admin" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                        <a asp-action="Edit" asp-route-id="@teacher.Id" asp-controller="Teacher" asp-area="Admin" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                        <a asp-action="Delete" asp-route-id="@teacher.Id" asp-controller="Teacher" asp-area="Admin" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

