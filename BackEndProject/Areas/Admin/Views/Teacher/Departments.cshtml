@model IEnumerable<Department>
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teacher List</h4>
                <div class="col-12">
                    <a asp-action="Index" asp-controller="Teacher" asp-area="Admin" class="btn btn-dark">Go to Index</a>
                    <a asp-action="CreateDep" asp-controller="Teacher" asp-area="Admin" class="btn btn-success">Create a new department</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>

                        </thead>
                        <tbody>
                            @foreach (Department department in Model)
                            {
                                <tr>

                                    <td class="py-1">
                                        <p>@department.Abbreviation.ToUpper() / @department.Name.ToLower()</p>
                                    </td>
                                    <td>
                                        <a asp-action="DepDetail" asp-route-id="@department.Id" asp-controller="Teacher" asp-area="Admin" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

