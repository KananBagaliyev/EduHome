@model IEnumerable<Blog>
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog List</h4>
                <div class="col-12">
                    <a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-success">Create a new blog</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Blog Image
                                </th>
                                <th>
                                    Blog Name
                                </th>
                                <th>
                                    Details
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Blog blog in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/img/blog/@blog.Image" alt="Course" style="width:150px !important; height:100px !important; border-radius:0; border:2px solid black" />
                                    </td>
                                    <td class="py-1">
                                        <p>@blog.Header.ToUpper()</p>
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@blog.Id" asp-controller="Blog" asp-area="Admin" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                        <a asp-action="Edit" asp-route-id="@blog.Id" asp-controller="Blog" asp-area="Admin" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                        <a asp-action="Delete" asp-route-id="@blog.Id" asp-controller="Blog" asp-area="Admin" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

