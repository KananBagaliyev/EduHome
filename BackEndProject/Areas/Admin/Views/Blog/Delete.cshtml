@model Blog
<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/img/blog/@Model.Image" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Header </h2>
                        <h6>By @Model.Publisher  / @Model.Date.ToString("MMM dd, yyyy", CultureInfo.InvariantCulture) </h6>
                        <p>@Model.Content</p>
                    </div>
                </div>
            </div>
        </div>
        <form method="post">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-action="Index" class="btn btn-dark">Go to Index</a>
        </form>
    </div>
</div>
<!-- Blog End -->
