@model AboutUs
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Course List</h4>
                <div class="col-12">
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    AboutUs Image
                                </th>
                                <th>
                                    AboutUs Header
                                </th>
                                <th>
                                    Details
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="py-1">
                                    <img src="~/img/about/@Model.Image" alt="Course" style="width:150px !important; height:100px !important; border-radius:0; border:2px solid black" />
                                </td>
                                <td>
                                    <p>@Model.Header</p>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="About" asp-area="Admin" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

