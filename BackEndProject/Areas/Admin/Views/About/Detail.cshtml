@model AboutUs

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                <img src="~/img/slider/@Model.Image" style="width:70%" alt="Alternate Text" />
                <div class="row">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form class="forms-sample mt-5" method="post" enctype="multipart/form-data" runat="Server">
                        <div class="form-group">
                            <label asp-for="Header"></label>
                            <input asp-for="Header" class="form-control" />
                            <span class="text-danger" asp-validation-for="Header"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photo"></label>
                            <input asp-for="Photo" class="form-control" />
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content"></label>
                            <input asp-for="Content" class="form-control" />
                            <span class="text-danger" asp-validation-for="Content"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShortContent"></label>
                            <input asp-for="ShortContent" class="form-control" />
                            <span class="text-danger" asp-validation-for="ShortContent"></span>
                        </div>
                        <button id="submit_button" type="submit" class="btn btn-danger ml-2">Delete</button>
                        <a asp-action="Index" class="btn btn-dark ml-3">Go to Index</a>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>