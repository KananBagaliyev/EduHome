@model IEnumerable<Course>
@{
    Layout = "_AdminLayout";
 }
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Course List</h4>
                    <div class="col-12">
                        <a asp-action="Create" class="btn btn-success">Create a new course</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Course Image
                                    </th>
                                    <th>
                                        Course Name
                                    </th>
                                    <th>
                                        Details
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Course course in Model)
                                {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/img/course/@course.Image" alt="Course" style="width:150px !important; height:100px !important; border-radius:0; border:2px solid black" />
                                    </td>
                                    <td class="py-1">
                                        <p>@course.Name.ToUpper()</p>
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@course.Id" asp-controller="Course" asp-area="Admin" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                        <a @*asp-action="Edit" asp-route-id="@course.Id"*@ class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                        <a asp-action="Delete" asp-route-id="@course.Id" asp-controller="Course" asp-area="Admin" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
