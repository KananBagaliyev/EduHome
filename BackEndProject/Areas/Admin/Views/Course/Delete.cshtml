@model CourseDetailVM
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/img/course/@Model.Course.Image" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Course.Name</h2>
                        <div class="row">
                            <div class="col-md-6">

                                @foreach (CourseDetail detail in Model.CourseDetails)
                                {
                                    if (detail.Id == Model.Course.CourseDetailId)
                                    {
                                        <p>@Html.Raw(detail.Content) </p>

                                        <div class="course-details-left">
                                            <div class="single-course-left">
                                                <h3>about course</h3>
                                                <p>@Html.Raw(detail.AboutCourse)</p>
                                            </div>
                                            <div class="single-course-left">
                                                <h3>how to apply</h3>
                                                <p>@Html.Raw(detail.HowToApply)</p>
                                            </div>
                                            <div class="single-course-left">
                                                <h3>certification</h3>
                                                <p class="margin">@Html.Raw(detail.Certification)</p>

                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="col-md-6">

                                @foreach (CourseFeature feature in Model.CourseFeatures)
                                {
                                    if (feature.Id == Model.Course.CourseFeatureId)
                                    {

                                        <div class="course-details-right">
                                            <h3>COURSE FEATURES</h3>
                                            <table style="width:100%">
                                                <tr>
                                                    <th>Starts</th>
                                                    <td>@feature.StartingDate.ToString("dd MMM, yyyy", CultureInfo.InvariantCulture)</td>
                                                </tr>
                                                <tr>
                                                    <th>Duration</th>
                                                    <td>@feature.Duration Month</td>
                                                </tr>
                                                <tr>
                                                    <th>Class Duration</th>
                                                    <td>@feature.ClassDuration Hours</td>
                                                </tr>
                                                <tr>
                                                    <th>Skill Level</th>
                                                    <td>@feature.SkillLevel</td>
                                                </tr>
                                                <tr>
                                                    <th>Language</th>
                                                    <td>@feature.Language</td>
                                                </tr>
                                                <tr>
                                                    <th>Students</th>
                                                    <td>@feature.Students</td>
                                                </tr>
                                                <tr>
                                                    <th>Assesments</th>
                                                    <td>@feature.Assesments</td>
                                                </tr>
                                            </table>
                                            <h3 class="text-danger">course fee $@feature.Fee</h3>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form method="post">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-action="Index" class="btn btn-dark">Go to Index</a>
        </form>
    </div>
</div>
<!-- Blog End -->
