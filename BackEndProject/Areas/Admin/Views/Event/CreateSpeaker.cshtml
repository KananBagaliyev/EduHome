@model Speaker
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Event</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data" runat="Server">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Photo"></label>
                                <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/">
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Speciality"></label>
                                <input asp-for="Speciality" class="form-control" placeholder="Speciality">
                                <span asp-validation-for="Speciality" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <button id="submit_button" type="submit" class="btn btn-primary mr-2">Create</button>
                    <a asp-action="Index" class="btn btn-dark">Go to Index</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{>
    <partial name="_Validation" />;
    

}





