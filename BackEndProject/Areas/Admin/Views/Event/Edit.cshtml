@model BackEndProject.Areas.Admin.ViewModels.EventVM
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Event</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data" runat="Server">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Event.Header"></label>
                                <input asp-for="@Model.Event.Header" class="form-control" placeholder="Header">
                                <span asp-validation-for="@Model.Event.Header" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Event.Photo"></label>
                                <input asp-for="@Model.Event.Photo" class="form-control" placeholder="Photo">
                                <span asp-validation-for="@Model.Event.Photo" class="text-danger"></span>
                            </div>
                        </div>


                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="@Model.Event.Date"></label>
                                <input asp-for="@Model.Event.Date" class="form-control" placeholder="Definition">
                                <span asp-validation-for="@Model.Event.Date" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="@Model.Event.Interval"></label>
                                <input asp-for="@Model.Event.Interval" class="form-control" placeholder="Interval">
                                <span asp-validation-for="@Model.Event.Interval" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="@Model.Event.Location"></label>
                                <input asp-for="@Model.Event.Location" class="form-control" placeholder="Location">
                                <span asp-validation-for="@Model.Event.Location" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="@Model.Event.Definition"></label>
                                <input asp-for="@Model.Event.Definition" class="form-control" placeholder="Definition">
                                <span asp-validation-for="@Model.Event.Definition" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <h4>Current speakers:</h4>
                    @foreach (var item in Model.Speakers)
                    {
                        if (item != Model.Speakers.ElementAt(Model.Speakers.Count() - 1))
                        {
                            ViewBag.Speakers += item.Name + "/" + item.Speciality + "-------";
                        }
                        else
                        {
                            ViewBag.Speakers += item.Name + "/" + item.Speciality;
                        }
                    }
                    <input type="text" disabled class="form-control" name="name" value="@ViewBag.Speakers" />
                    
                    <h4>Choose new speaker(s):</h4>
                    <br />

                    <select name="speakers" id="speakers" multiple>
                        @foreach (var item in Model.AllSpeakers)
                        {
                            <option value=" @item.Id">@item.Name</option>

                        }
                    </select>


                    <div class="form-group">
                        <label asp-for="@Model.Event.Content"></label>
                        <textarea asp-for="@Model.Event.Content" id="editor"></textarea>
                        <span asp-validation-for="@Model.Event.Content" class="text-danger"></span>
                    </div>
                    <button id="submit_button" type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="Index" class="btn btn-dark">Go to Index</a>
                </form>
            </div>
        </div>
    </div>
</div>

