@model IEnumerable<Speaker>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">User List</h4>
                <div class="col-12">
                    <a asp-action="CreateSpeaker" asp-controller="Event" asp-area="Admin" class="btn btn-success">Add Speaker</a>
                </div>
                @if (Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Speciality
                                    </th>
                                    <th>
                                        Details
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Speaker speaker in Model)
                                {
                                   
                                    <tr class="rows">
                                        <td class="py-1">
                                            <img src="~/img/event/@speaker.Image" alt="Alternate Text" style="width:120px !important; height:100px !important; border-radius:0; border:2px solid black" />
                                        </td>
                                        <td class="py-1">
                                            <p>@speaker.Name</p>
                                        </td>
                                        <td class="py-1">
                                            <p>@speaker.Speciality</p>
                                        </td>
                                        <td>
                                            <a asp-action="EditSpeaker" asp-route-id="@speaker.Id" asp-controller="Event" asp-area="Admin" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {<h2 class="mt-5">OOOPS... I cannot find anything</h2>}
            </div>
        </div>
    </div>
</div>

