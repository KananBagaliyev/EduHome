@model Data
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Data</h4>
                <div class="row">
                    <a asp-action="Create" asp-controller="Slider" asp-area="Admin" class="btn btn-success">Create a new phone number</a>
                    <a asp-action="Create" asp-controller="Slider" asp-area="Admin" class="btn btn-danger ml-5">Delete phone numbers</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Logo
                                </th>
                                <th>
                                    Website
                                </th>
                                <th>
                                    Details
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="py-1">
                                    <img src="~/img/logo/@Model.Logo" alt="Course" style="width:150px !important; border-radius:0; border:2px solid black" />
                                </td>
                                <td class="py-1">
                                    <p>@Model.Location</p>
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@Model.Id" asp-controller="Contact" asp-area="Admin" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Contact" asp-area="Admin" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
