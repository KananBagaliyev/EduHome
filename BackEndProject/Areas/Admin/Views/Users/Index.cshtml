@model IEnumerable<UserVM>
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">User List</h4>
                <div class="col-12">
                    <a asp-action="DeletedUser" asp-controller="Users" asp-area="Admin" class="btn btn-danger">Deleted users</a>
                </div>
                @if (Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Fullname
                                    </th>
                                    <th>
                                        Username
                                    </th>
                                    <th>
                                        Role
                                    </th>
                                    <th>
                                        Details
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (UserVM user in Model)
                                {
                                    if (user.Username != User.Identity.Name)
                                    {
                                        <tr class="rows">
                                            <td class="py-1">
                                                <p>@user.Fullname.ToUpper()</p>
                                            </td>
                                            <td class="py-1">
                                                <p>@user.Username.ToLower()</p>
                                            </td>
                                            <td class="py-1">
                                                <p>@user.Role.ToLower()</p>
                                            </td>
                                            <td>
                                                <a asp-action="Detail" asp-route-id="@user.Id" asp-controller="Users" asp-area="Admin" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                                <a asp-action="Edit" asp-route-id="@user.Id" asp-controller="Users" asp-area="Admin" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                                <a asp-action="Delete" asp-route-id="@user.Id" asp-controller="Users" asp-area="Admin" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else {<h2 class="mt-5">There are no active users</h2> }
            </div>
        </div>
    </div>
</div>

