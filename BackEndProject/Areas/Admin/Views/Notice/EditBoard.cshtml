@model NoticeBoard

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider</h4>
                <div class="row">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form class="forms-sample mt-5" method="post" enctype="multipart/form-data" runat="Server">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Date"></label>
                                <input asp-for="Date" class="form-control"  />
                                <span class="text-danger" asp-validation-for="Date"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Content"></label>
                                <input asp-for="Content" class="form-control" style="width:400%" />
                                <span class="text-danger" asp-validation-for="Content"></span>
                            </div>
                        </div>
                        <button id="submit_button" type="submit" class="btn btn-success ml-2">Edit</button>
                        <a asp-action="Index" class="btn btn-dark ml-3">Go to Index</a>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
    <partial name="_Validation" />

}