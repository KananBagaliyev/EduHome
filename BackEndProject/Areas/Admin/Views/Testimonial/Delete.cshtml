@model Testimonial
@{
    ViewData["Title"] = "Detail";
}

<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/img/testimonial/@Model.Image" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h3 class="mt-3">Name</h3>
                        <p>@Model.Name</p>
                        <h3 class="mt-3">Speciality</h3>
                        <p>@Model.Speciality</p>
                        <h3 class="mt-3">Description</h3>
                        <p> @Model.Description </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <form method="post">
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                <a asp-action="Index" class="btn btn-dark">Go to Index</a>
            </form>
        </div>
    </div>
</div>
<!-- Blog End -->
