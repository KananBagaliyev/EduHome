@model Testimonial

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Testimonial №@Model.Id</h4>
                <div class="row">
                    <img src="~/img/testimonial/@Model.Image" style="width:8%;height: 25%;" alt="Alternate Text" />
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form class="forms-sample mt-5" method="post" enctype="multipart/form-data" runat="Server">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" style="width:400%" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Photo"></label>
                                <input type="file" name="File" id="file" accept="image/" class="form-control" style="width:400%" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" style="width:400%" />
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Speciality"></label>
                                <input asp-for="Speciality" class="form-control" style="width:400%" />
                                <span class="text-danger" asp-validation-for="Speciality"></span>
                            </div>
                        </div>
                        <button id="submit_button" type="submit" class="btn btn-success ml-2">Edit</button>
                        <a asp-action="Index" class="btn btn-dark ml-3">Go to Index</a>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
    <partial name="_Validation" />

}