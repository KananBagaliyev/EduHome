@model EventDetailVM
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url(/img/banner/@Model.Background.Image) !important">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img">
                        <img src="~/img/event/@Model.Event.Image" alt="event-details">
                        <div class="event-date">
                            <h3>@Model.Event.Date.ToString("dd MMM",CultureInfo.InvariantCulture)</h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@Model.Event.Header</h2>
                        <ul>
                            <li><span>time : </span>@Model.Event.Interval</li>
                            <li><span>venue : </span>@Model.Event.Location</li>
                        </ul>
                        <p>@Model.Event.Content</p>
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @foreach (Speaker speaker in Model.Speakers)
                            {

                                <div class="single-speaker">
                                    <div class="speaker-img">
                                        <img src="~/img/event/@speaker.Image" alt="speaker">
                                    </div>
                                    <div class="speaker-name">
                                        <h5>@speaker.Name</h5>
                                        <p>@speaker.Speciality </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" class="search-field" autocomplete="off" />
                                <ul class="list-group my-list-group" style="position:absolute;width:100%;z-index:99999">
                                </ul>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>Blogs</h3>
                        <ul>
                            @foreach (Blog blog in Model.Blogs)
                            {
                                <li><a asp-action="Detail" asp-controller="Blog" asp-route-id="@blog.Id">@blog.Header (@blog.Id)</a></li>
                            }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>Courses</h3>
                        @foreach (Course course in Model.Courses)
                        {

                            <div class="single-post mb-50">
                                <div class="single-post-img">
                                    <a asp-action="Detail" asp-controller="Course" asp-route-id="@course.Id" style="width:33% !important; margin-top:5px!important">
                                        <img src="~/img/course/@course.Image" alt="post">
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4><a asp-action="Detail" asp-controller="Course" asp-route-id="@course.Id">@course.Name</a></h4>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            <a asp-action="Index" asp-controller="Course" class="mr-10 mb-10">course</a>
                            <a asp-action="Index" asp-controller="Event">events</a>
                            <a asp-action="Index" asp-controller="Teacher" class="mb-10">teachers</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details End -->
