@model BlogVM
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url(/img/banner/@Model.Background.Image) !important">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    @await Component.InvokeAsync("Blog",ViewBag.Pageindicator)
                    <div class="col-md-12">
                        <div class="pagination">
                            <ul>
                                @for (int i = 1; i <= +ViewBag.PageCount; ++i)
                                {
                                    if (ViewBag.PageIndicator == i)
                                    {
                                        <li class="page-item" style="border-color:black;pointer-events:none;opacity:0.6"><a class="page-link" href="/blog/index?page=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item" style="border-color:black;"><a style="color:#f34f3f" class="page-link" href="/blog/index?page=@i">@i</a></li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" class="search-field" autocomplete="off" />
                                <ul class="list-group my-list-group" style="position:absolute;width:100%;z-index:99999">
                                </ul>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>Events</h3>
                        <ul>
                            @foreach (Event eventName in Model.Events)
                            {
                                <li><a asp-action="Detail" asp-controller="Event" asp-route-id="@eventName.Id">@eventName.Header.ToUpper()</a></li>

                            }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest events</h3>
                        @foreach (Event _event in Model.Events)
                        {

                            <div class="single-post mb-30">
                                <div class="single-post-img">
                                    <a asp-action="Detail" asp-controller="Event" asp-route-id="@_event.Id" style="width:33% !important; margin-top:5px!important">
                                        <img src="~/img/event/@_event.Image" alt="post">
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4><a asp-action="Detail" asp-controller="Event" asp-route-id="@_event.Id">@_event.Header.ToUpper()</a></h4>
                                    <p>@_event.Date.ToString("MMM dd, yyyy",CultureInfo.InvariantCulture)</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            <a asp-action="Index" asp-controller="Course" class="mr-10 mb-10">course</a>
                            <a asp-action="Index" asp-controller="Event">events</a>
                            <a asp-action="Index" asp-controller="Teacher" class="mb-10">teachers</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->